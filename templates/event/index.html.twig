{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController !{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Il y a {{ events | length }} évènement(s) actuellement</h3>
        <a href="{{ path('events_create') }}" class="btn btn-primary">Ajouter un nouvel évènement</a>
    </div>

    <div class="example-wrapper">

        <h1>Events list</h1>

        {% for event in events %}

            <h2>{{ event.title }}</h2>
            <a href="{{ path('events_update', { id: event.id}) }}" class="btn btn-primary">Update</a>
            <a href="{{ path('events_delete', { id: event.id}) }}" class="btn btn-warning">Delete</a>


        {% endfor %}

    </div>
{% endblock %}
