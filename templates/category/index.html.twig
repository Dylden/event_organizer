{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController !{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Il y a {{ categories | length }} catégorie(s) actuellement</h3>
        <a href="{{ path('categories_create') }}" class="btn btn-primary">Ajouter une nouvelle catégorie</a>
    </div>

    <div class="example-wrapper">

        <h1>Categories list</h1>

        {% for category in categories %}

            <h2>{{ category.name }}</h2>
            <h2>{{ category.description }}</h2>
            <a href="{{ path('categories_update', { id: category.id}) }}" class="btn btn-primary">Update</a>
            <a href="{{ path('categories_delete', { id: category.id}) }}" class="btn btn-warning">Delete</a>


        {% endfor %}

    </div>
{% endblock %}
