{% extends 'base.html.twig' %}

{% block title %}Hello TagController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Il y a {{ tags | length }} tag(s) actuellement</h3>
        <a href="{{ path('tags_create') }}" class="btn btn-primary">Ajouter un nouveau tag</a>
    </div>

    <div class="example-wrapper">

        <h1>Tags list</h1>

        {% for tag in tags %}

            <h2>{{ tag.name }}</h2>
            <a href="{{ path('tags_update', { id: tag.id}) }}" class="btn btn-primary">Update</a>
            <a href="{{ path('tags_delete', { id: tag.id}) }}" class="btn btn-warning">Delete</a>
        {% endfor %}

    </div>
{% endblock %}
