{% extends 'base.html.twig' %}

{% block title %}Hello EstablishmentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Il y a {{ establishments | length }} établissement(s) actuellement</h3>
        <a href="{{ path('establishments_create') }}" class="btn btn-primary">Ajouter un nouvel établissement</a>
    </div>

<div class="example-wrapper">

    <h1>Establishments list</h1>

    {% for establishment in establishments %}

        <h2>{{ establishment.name }}</h2>
        <h2>{{ establishment.address }}</h2>
        <h2>{{ establishment.description }}</h2>


    {% endfor %}

</div>
{% endblock %}
