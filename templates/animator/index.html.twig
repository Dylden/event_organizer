{% extends 'base.html.twig' %}

{% block title %}Hello AnimatorController !{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Il y a {{ animators | length }} animateur(s) actuellement</h3>
        <a href="{{ path('animators_create') }}" class="btn btn-primary">Ajouter un nouvel animateur</a>
    </div>

    <div class="example-wrapper">

        <h1>Animators list</h1>

        {% for animator in animators %}

            <h2>{{ animator.firstname }}</h2>
            <h2>{{ animator.lastname }}</h2>

            <a href="{{ path('animators_update', { id: animator.id}) }}" class="btn btn-primary">Update</a>
            <a href="{{ path('animators_delete', { id: animator.id}) }}" class="btn btn-warning">Delete</a>

        {% endfor %}

    </div>
{% endblock %}
